<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#e3e3e3</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>


    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="user_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Spinner -->
    <style name="spinner_dropdown_style_theme1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
    </style>

    <!-- View in Contact detail-->
    <style name="view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">#bdbdbd</item>
    </style>

    <!-- My EditText Theme-->
    <style name="MyEditTextTheme">
        <item name="android:textColorHint">@color/secondaryText</item>
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!-- My Button -->
    <style name="MyButton">
        <!--<item name="android:background">@drawable/border_login</item>-->
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/bg_lightPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
