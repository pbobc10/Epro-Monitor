<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/txtNomContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dr CHARLES Marie Carmelle Delva (0/0)" />

        <TextView
            android:id="@+id/txtStatutVisite"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="end"
            android:layout_weight="1"
            android:layout_marginEnd="24dp"
            android:text="VISITE NON EFFECTUÃ‰E" />

        <ImageButton
            android:id="@+id/ibclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="@+id/txtNomContact"
            android:background="@null"
            android:src="@drawable/ic_clear_black_24dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
