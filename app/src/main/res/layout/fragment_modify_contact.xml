<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightPrimary"
    android:fitsSystemWindows="true"
    tools:context=".fragments.ModifyContactFragment">

    <LinearLayout
        android:id="@+id/parent_contact_register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/contact_modifier"
            android:textColor="@color/bg_secondary"
            android:textSize="36sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spNatureModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/nature_array"
                    android:prompt="@string/prompt_nature"
                    android:spinnerMode="dialog" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spTitreModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/titre_array"
                    android:prompt="@string/prompt_titre"
                    android:spinnerMode="dialog" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etNomModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_contact"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/hint_nom"
                    android:inputType="textPersonName|textCapWords"
                    android:padding="10dp"
                    android:textColorHint="@color/input_login_hint"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPrenomModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_contact"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/hint_prenom"
                    android:inputType="textPersonName|textCapWords"
                    android:padding="10dp"
                    android:textColorHint="@color/input_login_hint"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spSecteurModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/secteur_array"
                    android:prompt="@string/prompt_secteur"
                    android:spinnerMode="dialog" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spSpecialiteModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/specialite_array"
                    android:prompt="@string/prompt_specialite"
                    android:spinnerMode="dialog" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spForceModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/specialite_array"
                    android:prompt="@string/prompt_force"
                    android:spinnerMode="dialog" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnAddFieldModify"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="fill_horizontal|center"
                android:layout_weight="1"
                android:background="@drawable/ic_phone_black_24dp"
                android:text="add" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="12"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPhoneModify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/border_contact"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/hint_tel"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10dp"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLTel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/btnDeletePhone2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="12"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPhone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_contact"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/hint_tel"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10dp"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLtel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/btnDeletePhone3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="12"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPhone3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_contact"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/hint_tel"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10dp"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etEmailModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_contact"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@color/input_login_hint"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btnModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_contact"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/register_btn"
            android:textColor="@color/bg_lightPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>