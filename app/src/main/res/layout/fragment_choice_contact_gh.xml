<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragments.ChoiceContactGHFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#53bbb4"
        android:orientation="vertical"
        android:padding="8dp">

        <Spinner
            android:id="@+id/spSpecialiteGH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spCommuneGH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spLocaliteGH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSoumettre"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"
            android:background="#7d669e"
            android:text="Soumettre" />

        <Button
            android:id="@+id/btnAnnuler"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@android:color/white"
            android:background="#e15258"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="Annuler" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvChoiceContactGH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />

</LinearLayout>